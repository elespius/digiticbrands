{
  "extends": [
    "airbnb-base",
    "plugin:vue/vue3-recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Joomla": true,
    "MediaManager" : true,
    "bootstrap": true
  },
  "rules": {
    "no-param-reassign": ["error", { "props": false }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["build/**/*.js"]}],
    "strict": [0],
    "no-alert": 0,
    "max-len": ["error",
      150,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "import/extensions": 0,
    "func-names": [
      "error",
      "as-needed"
    ]
  }
}
