		<language tag="en-GB">en-GB.plg_content_avatar.sys.ini</language>
</languages>
<config>
	<fields name="params">
            <fieldset name="basic">
                <field name="size" description="PLG_CONTENT_AVATAR_SIZE_DESC" label="PLG_CONTENT_AVATAR_SIZE" type="Text">
                </field>
                <field name="default" description="PLG_CONTENT_AVATAR_DEFAULT_DESC" label="PLG_CONTENT_AVATAR_DEFAULT" type="List">
                    <option>PLG_CONTENT_AVATAR_AVATARS_404</option>
                    <option>PLG_CONTENT_AVATAR_AVATARS_MM</option>
                    <option>PLG_CONTENT_AVATAR_AVATARS_IDENTICON</option>
                    <option>PLG_CONTENT_AVATAR_AVATARS_MONSTERID</option>
                    <option>PLG_CONTENT_AVATAR_AVATARS_WAVATAR</option>
                    <option>PLG_CONTENT_AVATAR_AVATARS_RETRO</option>
                    <option>PLG_CONTENT_AVATAR_AVATARS_BLANK</option>
                </field>
                <field name="avatar_http" description="PLG_CONTENT_AVATAR_HTTP" label="PLG_CONTENT_AVATAR_HTTP_LABEL" type="Text"></field>
                <field name="profile_http" description="PLG_CONTENT_AVATAR_PROFILE_HTTP" label="PLG_CONTENT_AVATAR_PROFILE_HTTP_LABEL" type="Text"></field>
                <field name="avatar_https" description="PLG_CONTENT_AVATAR_HTTPS" label="PLG_CONTENT_AVATAR_HTTPS_LABEL" type="Text"></field>
                <field name="profile_https" description="PLG_CONTENT_AVATAR_PROFILE_HTTPS" label="PLG_CONTENT_AVATAR_PROFILE_HTTPS_LABEL" type="Text"></field>
            </fieldset>
	</fields>
</config>
<description>PLG_CONTENT_AVATAR_XML_DESCRIPTION</description>
