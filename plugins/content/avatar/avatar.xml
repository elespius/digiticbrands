<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin"  group="content"> 

<name>plg_content_avatar</name>
<creationDate>20/8/2013</creationDate>
<author>Mohamed Infaz</author>
<files>
    <filename plugin="avatar">avatar.php</filename>
    <filename>index.html</filename>
</files>
<authorEmail>infaz9999@gmail.com</authorEmail>
<authorUrl>www.cricketpissa.blogspot.com</authorUrl>
<version>3.0.0</version>
<copyright>Copyright information</copyright>

<languages>
		<language tag="en-GB">en-GB.plg_content_avatar.ini</language>
		<language tag="en-GB">en-GB.plg_content_avatar.sys.ini</language>
</languages>
<config>
	<fields name="params">
            <fieldset name="basic">
                <field name="size" description="PLG_CONTENT_GRAVATAR_SIZE_DESC" label="PLG_CONTENT_GRAVATAR_SIZE" type="Text">
                </field>
                <field name="default" description="PLG_CONTENT_GRAVATAR_DEFAULT_DESC" label="PLG_CONTENT_GRAVATAR_DEFAULT" type="List">
                    <option value="404">404</option>
                    <option value="mm">mm</option>
                    <option value="identicon">identicon</option>
                    <option value="monsterid">monsterid</option>
                    <option value="wavatar">wavatar</option>
                    <option value="retro">retro</option>
                    <option value="blank">blank</option>
                </field>
                <field name="avatar_http" description="PLG_CONTENT_AVATAR_HTTP" label="LG_CONTENT_AVATAR_HTTP_LABEL" type="Text"></field>
                <field name="profile_http" description="PLG_CONTENT_PROFILE_HTTP" label="PLG_CONTENT_PROFILE_HTTP_LABEL" type="Text"></field>
                <field name="avatar_https" description="PLG_CONTENT_AVATAR_HTTPS" label="PLG_CONTENT_AVATAR_HTTPS_LABEL" type="Text"></field>
                <field name="profile_https" description="PLG_CONTENT_PROFILE_HTTPS" label="PLG_CONTENT_PROFILE_HTTPS_LABEL" type="Text"></field>
            </fieldset>
	</fields>
</config>
<description>PLG_CONTENT_AVATAR_XML </description>
</extension>