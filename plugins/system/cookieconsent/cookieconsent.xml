<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="system" method="upgrade">
	<name>plg_system_cookieconsent</name>
	<author>Joomla! Project</author>
	<creationDate>September 2019</creationDate>
	<copyright>(C) 2005 - 2019 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>4.0.0</version>
	<description>PLG_SYSTEM_COOKIECONSENT_XML_DESCRIPTION</description>
	<files>
		<filename plugin="cookieconsent">cookieconsent.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_cookieconsent.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_cookieconsent.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="Joomla\Component\Content\Administrator\Field">>
				<field
					name="section"
					type="list"
					label="PLG_SYSTEM_COOKIECONSENT_SECTION"
					default="site"
					validate="options"
					>
					<option value="site">PLG_SYSTEM_COOKIECONSENT_SECTION_SITE</option>
					<option value="administrator">PLG_SYSTEM_COOKIECONSENT_SECTION_ADMIN</option>
					<option value="both">PLG_SYSTEM_COOKIECONSENT_SECTION_BOTH</option>
				</field>

				<field name="valid"
					type="list"
					default="365"
					label="PLG_SYSTEM_COOKIECONSENT_COOKIE_VALID_LABEL"
					>
					<option value="7">PLG_SYSTEM_COOKIECONSENT_COOKIE_VALID_WEEK</option>
					<option value="30">PLG_SYSTEM_COOKIECONSENT_COOKIE_VALID_MONTH</option>
					<option value="90">PLG_SYSTEM_COOKIECONSENT_COOKIE_VALID_3MONTH</option>
					<option value="365">PLG_SYSTEM_COOKIECONSENT_COOKIE_VALID_1YEAR</option>
				</field>

				<field
					name="position"
					type="list"
					label="PLG_SYSTEM_COOKIECONSENT_POSITION_LABEL"
					default="bottom"
					validate="options"
					>
					<option value="bottom">PLG_SYSTEM_COOKIECONSENT_BANNER_BOTTOM</option>
					<option value="top">PLG_SYSTEM_COOKIECONSENT_BANNER_TOP</option>
					<option value="left">PLG_SYSTEM_COOKIECONSENT_FLOAT_LEFT</option>
					<option value="right">PLG_SYSTEM_COOKIECONSENT_FLOAT_RIGHT</option>
				</field>

				<field
					name="layout"
					type="list"
					label="PLG_SYSTEM_COOKIECONSENT_LAYOUT_LABEL"
					default="block"
					validate="options"
					>
					<option value="block">PLG_SYSTEM_COOKIECONSENT_LAYOUT_BLOCK</option>
					<option value="classic">PLG_SYSTEM_COOKIECONSENT_LAYOUT_CLASSIC</option>
					<option value="edgeless">PLG_SYSTEM_COOKIECONSENT_LAYOUT_EDGELESS</option>
				</field>

				<field
					name="bannercolour"
					type="color"
					label="PLG_SYSTEM_COOKIECONSENT_BANNER_COLOUR"
					default="#000000"
				/>

				<field
					name="bannertextcolour"
					type="color"
					label="PLG_SYSTEM_COOKIECONSENT_BANNER_TEXT"
					default="#f1d600"
				/>

				<field
					name="buttoncolour"
					type="color"
					label="PLG_SYSTEM_COOKIECONSENT_BUTTON_COLOUR"
					default="#ffffff"
				/>



				<field
					name="buttontextcolour"
					type="color"
					label="PLG_SYSTEM_COOKIECONSENT_BUTTON_TEXT"
					default="#383b75"
				/>
				<field
					name="message-text"
					type="textarea"
					label="PLG_SYSTEM_COOKIECONSENT_MESSAGE_TEXT_LABEL"
					hint="PLG_SYSTEM_COOKIECONSENT_MESSAGE_TEXT_DEFAULT"
					rows="2"
					filter="html"
				/>
				<field
					name="policylink"
					type="modal_article"
					label="PLG_SYSTEM_COOKIECONSENT_POLICY_LABEL"
					select="true"
					new="true"
					edit="true"
					clear="true"
					filter="integer"
				/>



				<field
					name="policylink-text"
					type="text"
					label="PLG_SYSTEM_COOKIECONSENT_POLICY_TEXT_LABEL"
					hint="PLG_SYSTEM_COOKIECONSENT_POLICY_TEXT_DEFAULT"
					size="40"
				/>

				<field
					name="button-text"
					type="text"
					label="PLG_SYSTEM_COOKIECONSENT_BUTTON_TEXT_LABEL"
					hint="PLG_SYSTEM_COOKIECONSENT_BUTTON_TEXT_DEFAULT"
					size="40"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
