<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9" type="plugin" group="twofactorauth" method="upgrade">
	<name>plg_twofactorauth_trust</name>
	<author>Joomla! Project</author>
	<creationDate>April 2018</creationDate>
	<copyright>(C) 2005 - 2018 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.9.0</version>
	<description>PLG_TWOFACTORAUTH_TRUST_XML_DESCRIPTION</description>
	<files>
		<filename plugin="trust">trust.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_twofactorauth_trust.ini</language>
		<language tag="en-GB">en-GB.plg_twofactorauth_trust.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="cookie_lifetime"
					type="number"
					label="PLG_TWOFACTORAUTH_TRUST_FIELD_COOKIE_LIFETIME_LABEL"
					description="PLG_TWOFACTORAUTH_TRUST_FIELD_COOKIE_LIFETIME_DESC"
					default="30"
					filter="integer"
					required="true"
				/>

				<field
					name="key_length"
					type="list"
					label="PLG_TWOFACTORAUTH_TRUST_FIELD_KEY_LENGTH_LABEL"
					description="PLG_TWOFACTORAUTH_TRUST_FIELD_KEY_LENGTH_DESC"
					default="16"
					filter="integer"
					required="true"
					>
					<option value="8">8</option>
					<option value="16">16</option>
					<option value="32">32</option>
					<option value="64">64</option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
