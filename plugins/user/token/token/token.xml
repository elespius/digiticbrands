<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="joomlatoken" addfieldpath="/plugins/user/token/field">
        <fieldset name="joomlatoken"
                  label="PLG_USER_TOKEN_GROUP_LABEL"
                  description="PLG_USER_TOKEN_GROUP_DESC"
        >
            <field name="saveme" type="note"
				   label="PLG_USER_TOKEN_SAVEME_DESC"
				   heading="p"
				   description=""
				   close="0"
				   class="alert alert-warning"
			/>

            <field name="notokenforotherpeople" type="note"
				   label="PLG_USER_TOKEN_NOTOKENFOROTHERPEOPLE_DESC"
				   heading="p"
				   description=""
				   close="0"
				   class="alert alert-warning"
			/>

            <field name="savemeforotherpeople" type="note"
				   label="PLG_USER_TOKEN_SAVEMEFOROTHERPEOPLE_DESC"
				   heading="p"
				   description=""
				   close="0"
				   class="alert alert-warning"
			/>

            <field name="token" type="joomlatoken"
                   default="" size="30"
                   algo="sha256"
                   label="PLG_USER_TOKEN_TOKEN_LABEL"
                   description="PLG_USER_TOKEN_TOKEN_DESC"
                   readonly="true"
                   class="input-xxlarge"/>

            <field name="enabled" type="radio" default="1"
                   label="PLG_USER_TOKEN_ENABLED_LABEL"
                   description="PLG_USER_TOKEN_ENABLED_DESC"
                   class="switcher btn-group">
                <option value="0">JNo</option>
                <option value="1">JYes</option>
            </field>

            <field name="reset" type="radio" default="0"
                   label="PLG_USER_TOKEN_RESET_LABEL"
                   description="PLG_USER_TOKEN_RESET_DESC"
                   class="switcher btn-group">
                <option value="0">JNo</option>
                <option value="1">JYes</option>
            </field>
        </fieldset>
    </fields>
</form>
