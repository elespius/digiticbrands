<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
    <name>My Apple Style counter module.</name>
    <author>Nima Nouri</author>
	<authorUrl>http://gpiutmd.iut.ac.ir</authorUrl>
	<creationDate>2011-11-25</creationDate>
	<copyright>Copyright (c)2010-2011 by Nima Nouri</copyright>
    <version>1.6.5</version>
    <description>My Apple Style counter module is a Java script based visitor counter.</description>
	<license>http://www.gnu.org/licenses/gpl-3.0-standalone.html</license>
    <files>
        <filename module="mod_mycounter">mod_mycounter.php</filename>
        <filename>index.html</filename>
		<filename>README.txt</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
		<filename>tmpl/img/comma.png</filename>
		<filename>tmpl/img/filmstrip.png</filename>
		<filename>tmpl/jquery.min.js</filename>
    </files>
    <params name="" description="">
		<param name="startnum" type="text" default="5" label="Starting Number" description="Starting Number" />
        <param name="countOnOff" type="radio" default="0" label="Counter" description="Switch on the counter or display a static number" >
            <option value="0">OFF</option>
            <option value="1">ON</option>
        </param>
        <param name="interval" type="text" default="2000" label="Interval" description="Counter interval in ms" />
        <param name="increment" type="text" default="1" label="Increment" description="Counter increment" />
    </params>
</install>