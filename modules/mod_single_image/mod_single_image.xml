<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_single_image</name>
	<author>Joomla! Project</author>
	<creationDate>May 2015</creationDate>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>MOD_SINGLE_IMAGE_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_single_image">mod_single_image.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>mod_single_image.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_single_image.ini</language>
		<language tag="en-GB">en-GB.mod_single_image.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_SINGLE_IMAGE" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="image"
					type="media"
					label="MOD_SINGLE_IMAGE_FIELD_IMAGE_LABEL"
					description="MOD_SINGLE_IMAGE_FIELD_IMAGE_DESC" />
				<field
					name="link"
					type="text"
					label="MOD_SINGLE_IMAGE_FIELD_LINK_LABEL"
					description="MOD_SINGLE_IMAGE_FIELD_LINK_DESC" />
				<field
					name="width"
					type="text"
					label="MOD_SINGLE_IMAGE_FIELD_WIDTH_LABEL"
					description="MOD_SINGLE_IMAGE_FIELD_WIDTH_DESC" />
				<field
					name="height"
					type="text"
					label="MOD_SINGLE_IMAGE_FIELD_HEIGHT_LABEL"
					description="MOD_SINGLE_IMAGE_FIELD_HEIGHT_DESC" />
				<field
					name="proportional"
					type="list"
					label="MOD_SINGLE_IMAGE_FIELD_PROPORTIONAL_LABEL"
					description="MOD_SINGLE_IMAGE_FIELD_PROPORTIONAL_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
