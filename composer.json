{
    "name": "joomla/joomla-cms",
    "type": "project",
    "description": "Joomla CMS",
    "keywords": [
        "joomla",
        "cms"
    ],
    "homepage": "https://github.com/joomla/joomla-cms",
    "license": "GPL-2.0-or-later",
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.2.5"
        },
        "vendor-dir": "libraries/vendor",
        "github-protocols": ["https"]
    },
    "support": {
        "issues": "https://issues.joomla.org/",
        "irc": "irc://chat.freenode.net/joomla/",
        "forum": "https://forum.joomla.org/",
        "docs": "https://docs.joomla.org/"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\CMS\\": "libraries/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Tests\\": "tests"
        }
    },
    "repositories": [
      {
        "type": "vcs",
        "url": "https://github.com/joomla-backports/lessphp.git",
        "no-api":  true
      },
      {
        "type": "vcs",
        "url": "https://github.com/joomla-backports/PHPMailer.git",
        "no-api":  true
      }
    ],
    "require": {
        "php": ">=5.3.10",
        "joomla/application": "~1.9",
        "joomla/archive": "^1.1.7",
        "joomla/data": "~1.2",
        "joomla/di": "~1.5",
        "joomla/event": "~1.2",
        "joomla/filter": "^1.4.3",
        "joomla/image": "^1.5",
        "joomla/input": "~1.3",
        "joomla/ldap": "~1.2",
        "joomla/registry": "^1.6",
        "joomla/session": "^1.3.4",
        "joomla/string": "^1.4",
        "joomla/uri": "~1.2",
        "joomla/utilities": "^1.6",
        "ircmaxell/password-compat": "1.*",
        "leafo/lessphp": "dev-joomla3-php8",
        "paragonie/random_compat": "~1.4",
        "paragonie/sodium_compat": "1.9.1",
        "phpmailer/phpmailer": "dev-joomla-backports",
        "symfony/polyfill-php55": "~1.9",
        "symfony/polyfill-php56": "~1.9",
        "symfony/polyfill-php71": "~1.9",
        "symfony/polyfill-php73": "~1.9",
        "symfony/yaml": "2.*",
        "simplepie/simplepie": "1.3.1",
        "google/recaptcha": "^1.1",
        "typo3/phar-stream-wrapper": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "joomla/cms-coding-standards": "~2.0.0-alpha2@dev",
        "joomla/coding-standards": "~3.0@dev",
        "joomla/mediawiki": "dev-master",
        "friendsofphp/php-cs-fixer": "~2.12",
        "squizlabs/php_codesniffer": "~3.0",
        "joomla-projects/joomla-browser": "~4.0@dev",
        "codeception/codeception": "~4.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "joomla/test": "~2.0@beta",
        "codeception/module-asserts": "^1.0",
        "codeception/module-db": "^1.0",
        "codeception/module-rest": "^1.0",
        "codeception/module-webdriver": "^1.0",
        "codeception/module-phpbrowser": "^1.0"
    },
    "replace": {
        "paragonie/random_compat": "9.99.99"
    }
}
