<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params">
		<!--  Backend user account settings. -->
		<fieldset name="params" label="COM_USERS_SETTINGS_FIELDSET_LABEL">
			<field
				name="admin_style"
				type="templatestyle"
				label="COM_USERS_USER_FIELD_BACKEND_TEMPLATE_LABEL"
				client="administrator"
				filter="uint"
				>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

			<field
				name="admin_language"
				type="language"
				label="COM_USERS_USER_FIELD_BACKEND_LANGUAGE_LABEL"
				client="administrator"
				filter="cmd"
				>
				<option value="">JOPTION_USE_DEFAULT</option>
			</field>

			<field
					name="admin_dark"
					type="radio"
					label="COM_USERS_USER_FIELD_ADMIN_DARK_LABEL"
					description="COM_USERS_USER_FIELD_ADMIN_DARK_DESC"
					layout="joomla.form.field.radio.buttons"
					class="btn-group"
					default="-1"
			>
				<option class="btn btn-outline-secondary" value="-1">JGLOBAL_USE_GLOBAL</option>
				<option class="btn btn-outline-info" value="0">COM_USERS_USER_FIELD_ADMIN_DARK_LIGHT</option>
				<option class="btn btn-outline-primary" value="1">COM_USERS_USER_FIELD_ADMIN_DARK_BROWSER</option>
				<option class="btn btn-outline-dark" value="2">COM_USERS_USER_FIELD_ADMIN_DARK_DARK</option>
			</field>
		</fieldset>
	</fields>
</form>
