			<field name="module" type="text"
				   label="COM_AJAX_FIELD_SELECT_MODULE_LABEL"
				   description="COM_AJAX_FIELD_SELECT_MODULE_DESC"
			/>

			<field name="method" type="text" default="get"
				   label="COM_AJAX_FIELD_SELECT_METHOD_LABEL"
				   description="COM_AJAX_FIELD_SELECT_METHOD_DESC"
			/>

			<field name="plugin" type="text"
				   label="COM_AJAX_FIELD_SELECT_PLUGIN_LABEL"
				   description="COM_AJAX_FIELD_SELECT_PLUGIN_DESC"
			/>


		</fieldset>
