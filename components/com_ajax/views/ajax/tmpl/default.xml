<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_AJAX_AJAX_VIEW_DEFAULT_TITLE" option="COM_AJAX_AJAX_VIEW_DEFAULT_OPTION">
		<help key = "JHELP_MENUS_MENU_ITEM_AJAX" />
		<message><![CDATA[COM_AJAX_AJAX_VIEW_DEFAULT_DESC]]></message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">

			<field name="format" type="text"
				   label="COM_AJAX_FIELD_SELECT_FORMAT_LABEL"
				   description="COM_AJAX_FIELD_SELECT_FORMAT_DESC"
			/>

			<field name="ignoreMessages" type="radio" filter="options" default="1"
				   label="COM_AJAX_FIELD_SELECT_IGNORE_MESSSAGES_LABEL"
				   description="COM_AJAX_FIELD_SELECT_IGNORE_MESSSAGES_DESC"
			>
				<option value="1">JYES</option>
