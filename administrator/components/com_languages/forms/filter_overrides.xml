<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="JSEARCH_FILTER"
			description="COM_LANGUAGES_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
		/>

		<field
				name="language_client"
				type="list"
				onchange="this.form.submit();"
				default="en-GB0"
		>
			<option value="en-GB0">English (en-GB) - Site</option>
			<option value="en-GB1">English (en-GB) - Administrator</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
