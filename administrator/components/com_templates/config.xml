<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="templates"
		label="COM_TEMPLATES_SUBMENU_TEMPLATES"
		description="COM_TEMPLATES_CONFIG_FIELDSET_DESC">

		<field
			name="template_positions_display"
			type="radio"
			class="btn-group"
			default="0"
			label="COM_TEMPLATES_CONFIG_POSITIONS_LABEL"
			description="COM_TEMPLATES_CONFIG_POSITIONS_DESC">
			<option
				value="0">JDISABLED</option>
			<option
				value="1">JENABLED</option>
		</field>
        <field
                name="upload_limit" type="text"
                label="Upload Size (MB)"
                description="The maximum upload size for files inside Template Manager."
                default="2"
                extension="com_templates"
                />
        <field
                name="warning" type="note"
                label="Supported File Formats"
                description="Be careful before changing the file types. Read the tool tips before editing."
                default="zip"
                extension="com_templates"
                />
        <field
                name="image_formats" type="text"
                label="Valid Image Formats"
                description="These file types will be available for cropping and resizing."
                default="gif,bmp,jpg,jpeg"
                extension="com_templates"
                />
        <field
                name="source_formats" type="text"
                label="Valid Source Formats"
                description="These file types will be available for editing in editor."
                default="txt,less,ini,xml,js,php,css"
                extension="com_templates"
                />
        <field
                name="font_formats" type="text"
                label="Valid Font Formats"
                description="These file types will be available for font preview."
                default="woff,ttf,otf"
                extension="com_templates"
                />
        <field
                name="compressed_formats" type="hidden"
                default="zip"
                extension="com_templates"
                />
	</fieldset>

	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			validate="rules"
			component="com_templates"
			section="component" />
	</fieldset>
</config>
