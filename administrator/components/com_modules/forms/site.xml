<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldprefix="Joomla\Component\Modules\Administrator\Field">
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			>
			<option value="*">JALL</option>
		</field>
	</fieldset>
	<fields name="params">
		<fieldset
			name="advanced">

			<field
				name="layout"
				type="modulelayout"
				label="JFIELD_ALT_LAYOUT_LABEL"
				class="custom-select"
			/>

			<field
				name="moduleclass_sfx"
				type="textarea"
				label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				rows="3"
			/>

			<field
				name="cache"
				type="list"
				label="COM_MODULES_FIELD_CACHING_LABEL"
				default="1"
				filter="integer"
				>
				<option value="1">JGLOBAL_USE_GLOBAL</option>
				<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
			</field>

			<field
				name="cache_time"
				type="number"
				label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
				default="900"
				filter="integer"
			/>

			<field
				name="cachemode"
				type="hidden"
				default="static"
				>
				<option value="static"></option>
			</field>

			<field
				name="module_tag"
				type="moduletag"
				label="COM_MODULES_FIELD_MODULE_TAG_LABEL"
				default="div"
			/>

			<field
				name="bootstrap_size"
				type="integer"
				label="COM_MODULES_FIELD_BOOTSTRAP_SIZE_LABEL"
				first="0"
				last="12"
				step="1"
			/>

			<field
				name="header_tag"
				type="headertag"
				label="COM_MODULES_FIELD_HEADER_TAG_LABEL"
				default="h3"
			/>

			<field
				name="header_class"
				type="text"
				label="COM_MODULES_FIELD_HEADER_CLASS_LABEL"
			/>

			<field
				name="style"
				type="chromestyle"
				label="COM_MODULES_FIELD_MODULE_STYLE_LABEL"
			/>
		</fieldset>
	</fields>
</form>
