<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields" >
		<field name="core_content_id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true" />

		<field name="asset_id" type="hidden" filter="unset" />

		<field name="core_title" type="text" label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC" class="input-xlarge" size="30"
			required="true" labelclass="control-label" />

		<field name="core_alias" type="text" label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC" class="inputbox" size="45" labelclass="control-label" />

		<field name="core_body" type="textarea" rows="3" cols="5"
			label="COM_MEDIA_FIELD_IMAGETEXT_LABEL" description="COM_MEDIA_FIELD_IMAGETEXT_DESC"
			filter="JComponentHelper::filterText" />

		<field name="core_catid" type="categoryedit"
			label="JCATEGORY" description="JFIELD_CATEGORY_DESC"
			class="inputbox" required="true"
		>
		</field>

		<field name="core_created_time" type="calendar" label="COM_MEDIA_FIELD_CREATED_LABEL"
			description="COM_MEDIA_FIELD_CREATED_DESC" class="inputbox" size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc" labelclass="control-label" />

		<field name="core_created_user_id" type="user" 
			label="COM_MEDIA_FIELD_CREATED_BY_LABEL" description="COM_MEDIA_FIELD_CREATED_BY_DESC" labelclass="control-label" />

		<field name="core_created_by_alias" type="text"
			label="COM_MEDIA_FIELD_CREATED_BY_ALIAS_LABEL" description="COM_MEDIA_FIELD_CREATED_BY_ALIAS_DESC"
			class="inputbox" size="20" labelclass="control-label" />

		<field name="core_modified_time" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_MEDIA_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" labelclass="control-label" />

		<field name="core_modified_user_id" type="user"
		label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		class="readonly"
		readonly="true"
		filter="unset"
		labelclass="control-label"
		 />

		<field name="tags" 
			type="tag"
			label="JTAG"
			description="JTAG_DESC"
			class="inputbox span12 small"
			multiple="true"
		>
		</field>

	</fieldset>

</form>
