<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		<field name="title" type="text" label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC" class="inputbox input-xxlarge input-large-text" size="40" required="true" />
		<field name="description" type="editor" class="inputbox" label="COM_CJFORUM_FIELD_DESCRIPTION_LABEL" description="COM_CJFORUM_FIELD_DESCRIPTION_DESC" filter="JComponentHelper::filterText" buttons="true" />
		
		<fieldset name="options" label="COM_CJFORUM_EDITORCONFIG_FIELDSET_LABEL">
			<field name="user_id" type="user" label="COM_CJFORUM_FIELD_ASSIGNED_TO_LABEL" description="COM_CJFORUM_FIELD_ASSIGNED_TO_DESC" required="true" />
			<field name="rule_id" type="pointsrule" label="COM_CJFORUM_FIELD_RULE_ID_LABEL" description="COM_CJFORUM_FIELD_RULE_ID_DESC" required="true" />
			<field name="points" type="text" label="COM_CJFORUM_FIELD_POINTS_LABEL" description="COM_CJFORUM_FIELD_POINTS_DESC" required="true" />
			<field name="ref_id" type="text" label="COM_CJFORUM_FIELD_REF_ID_LABEL" description="COM_CJFORUM_FIELD_REF_ID_DESC" />

			<field name="published" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="chzn-color-state" filter="intval" size="1" default="1">
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
				<option value="2">JARCHIVED</option>
				<option value="-2">JTRASHED</option>
			</field>
			<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC" size="1" />
		</fieldset>

		<field name="created" type="calendar" label="COM_CJFORUM_FIELD_CREATED_LABEL"  description="COM_CJFORUM_FIELD_CREATED_DESC" class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<field name="created_by" type="user" label="COM_CJFORUM_FIELD_CREATED_BY_LABEL" description="COM_CJFORUM_FIELD_CREATED_BY_DESC" />
		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
		<field name="publish_up" type="calendar" label="COM_CJFORUM_FIELD_PUBLISH_UP_LABEL" description="COM_CJFORUM_FIELD_PUBLISH_UP_DESC" class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" />
		<field name="publish_down" type="calendar" label="COM_CJFORUM_FIELD_PUBLISH_DOWN_LABEL" description="COM_CJFORUM_FIELD_PUBLISH_DOWN_DESC" class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" />
	</fieldset>
</form>
